service cloud.firestore {
  match /databases/{database}/documents {
    match /calendar/{document=**} {
        allow read: if request.auth != null;
        allow write, delete: if get(/databases/$(database)/documents/users/$(request.auth.uid)).data.admin == true
    }
    match /attendance/{document} {
      allow read: if request.auth.uid == request.resource.data.userID || get(/databases/$(database)/documents/users/$(request.auth.uid)).data.admin == true;
      allow create: if request.auth.uid == request.resource.data.userID;
      allow update: if request.auth.uid == resource.data.userID;
    }
    match /users/{userID} {
        allow read: if request.auth.uid == userID;
        allow write, delete: if get(/databases/$(database)/documents/users/$(request.auth.uid)).data.admin == true
    }
    match /clubMemberships/{userID} {
        allow read: if request.auth.uid == userID;
        allow write, delete: if get(/databases/$(database)/documents/users/$(request.auth.uid)).data.admin == true
    }
    match /register/{document} {
        allow read: if get(/database/$(database)/documents/clubMemberships/$(request.auth.uid)).clubID == request.resource.data.clubID;
        allow create, write, delete; if get(/database/$(database)/documents/clubMemberships/$(request.auth.uid)).clubID == request.resource.data.clubID && get(/database/$(database)/documents/clubMemberships/$(request.auth.uid)).role = 'admin';
    }
    match /{document=**} {
      allow read, write: if false;
    }
  }
}
